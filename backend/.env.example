# Backend Environment Variables
# Copy to .env and configure for your environment

# Server Configuration
PORT=4000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# MongoDB Configuration
# Local Development
MONGODB_URI=mongodb://localhost:27017/chat-db

# Production (MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chat-db?retryWrites=true&w=majority

# Redis Configuration
# Local Development
REDIS_URL=redis://localhost:6379

# Production (with auth)
# REDIS_URL=rediss://user:password@redis-prod.example.com:6379

# CORS & Frontend
FRONTEND_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
# debug | info | warn | error

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for future notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Storage (S3 for images/files - future)
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=chat-app-uploads

# Monitoring
# SENTRY_DSN=https://...@sentry.io/...
# DATADOG_API_KEY=...

# Feature Flags
ENABLE_IMAGE_UPLOAD=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ANALYTICS=false

# Database Connection Pooling
DB_POOL_MIN=2
DB_POOL_MAX=10

# Socket.io Configuration
SOCKET_IO_PING_INTERVAL=25000
SOCKET_IO_PING_TIMEOUT=20000
